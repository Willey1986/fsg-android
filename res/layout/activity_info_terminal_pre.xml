<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="@dimen/grid06"
    android:background="@drawable/background_grey" >

    <TextView
        android:id="@+id/infoPreNearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/button_text_color"
        android:gravity="center"
        android:textSize="@dimen/grid06"
        android:text="@string/wristband_near" />


        
    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoPreNearTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/grid08" />

</RelativeLayout>