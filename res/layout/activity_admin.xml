<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="20"
    android:background="@drawable/background_image"
    android:gravity="center_vertical|center_horizontal">

    <Button
        android:id="@+id/button6"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/grid04"
        android:background="@layout/button_selector"
        android:drawableLeft="@drawable/icon_briefing_in"
        android:gravity="left|center_vertical" 
        android:drawablePadding="@dimen/grid04"
        android:paddingLeft="@dimen/grid04"
        android:textColor="@color/button_text_color"
        android:onClick="onButtonClick"
        android:text="Band übertragen" />
    
    <Button
        android:id="@+id/button7"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/grid04"
        android:background="@layout/button_selector"
        android:drawableLeft="@drawable/icon_briefing_out"
        android:gravity="left|center_vertical" 
        android:drawablePadding="@dimen/grid04"
        android:paddingLeft="@dimen/grid04"
        android:textColor="@color/button_text_color"
        android:onClick="onButtonClick"
        android:text="Band ungültig machen" />

    <Button
        android:id="@+id/button8"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/grid04"
        android:background="@layout/button_selector"
        android:drawableLeft="@drawable/icon_briefing_out"
        android:gravity="left|center_vertical" 
        android:drawablePadding="@dimen/grid04"
        android:paddingLeft="@dimen/grid04"
        android:textColor="@color/button_text_color"
        android:onClick="onButtonClick"
        android:text="Einzelnen Block ungültig machen" />

</LinearLayout>
