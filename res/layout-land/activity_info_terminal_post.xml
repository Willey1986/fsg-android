<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_grey"
    android:padding="24dp"
    android:orientation="vertical" >

    <View
        android:id="@+id/infoTerminalDriverPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/helmet100x100"
        android:gravity="center" />

    <View
        android:id="@+id/view1"
        android:layout_width="8dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="400dp"
        android:background="@color/button_text_color"
        android:gravity="center" />

    <TextView
        android:id="@+id/textViewLastname1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:text="@string/infoTerminalName"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/grid07" />

    <TextView
        android:id="@+id/textViewLastname2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="240dp"
        android:text="Mustermann Westerhagen"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/grid06" />

    <TextView
        android:id="@+id/textViewFirstname1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:text="@string/infoTerminalFirstname"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/grid07" />

    <TextView
        android:id="@+id/textViewFirstname2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="340dp"
        android:text="Phillip Alexander"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/grid06" />

    <TextView
        android:id="@+id/textViewBriefring1"
        android:layout_width="392dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="70dp"
        android:text="@string/infoTerminalBriefing"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/grid06" />

    <View
        android:id="@+id/infoTerminalBriefingIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="800dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/icon_briefing_out" />

    <TextView
        android:id="@+id/textViewAccelerationRuns1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="140dp"
        android:text="@string/infoTerminalAcceleration"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/grid06" />

    <TextView
        android:id="@+id/textViewAccelerationRuns2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="810dp"
        android:layout_marginTop="140dp"
        android:text="9"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/grid06" />

    <TextView
        android:id="@+id/textViewEnduranceRuns1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="210dp"
        android:text="@string/infoTerminalEndurance"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/grid06" />

    <TextView
        android:id="@+id/textViewEnduranceRuns2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="810dp"
        android:layout_marginTop="210dp"
        android:text="9"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/grid06" />

    <TextView
        android:id="@+id/textViewSkidPadRuns1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="280dp"
        android:text="@string/infoTerminalSkidPad"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/grid06" />

    <TextView
        android:id="@+id/textViewSkidPadRuns2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="810dp"
        android:layout_marginTop="280dp"
        android:text="9"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/grid06" />

    <TextView
        android:id="@+id/textViewAutocrossRuns1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="480dp"
        android:layout_marginTop="350dp"
        android:text="@string/infoTerminalAutocross"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/grid06" />

    <TextView
        android:id="@+id/textViewAutocrossRuns2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="810dp"
        android:layout_marginTop="350dp"
        android:text="9"
        android:textColor="@color/button_text_color"
        android:textSize="@dimen/grid06" />

</RelativeLayout>